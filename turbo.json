{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*",
        "**/tsconfig.json"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "lint": {},
        "typecheck": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ]
        },
        "db:generate": {
            "cache": false,
            "outputs": [
                "src/generated/**"
            ]
        },
        "db:push": {
            "cache": false
        }
    }
}