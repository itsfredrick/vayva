# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET="your-32-char-secret-here"
NEXTAUTH_SECRET="your-32-char-secret-here"
NEXTAUTH_URL="http://localhost:3000"
BETTER_AUTH_URL="http://localhost:3000"

# ============================================
# PAYMENTS - PAYSTACK
# ============================================
# Get from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY="sk_test_your_test_key_here"
NEXT_PUBLIC_PAYSTACK_KEY="pk_test_your_test_key_here"

# ============================================
# AI SERVICES
# ============================================
# Groq API - Get from: https://console.groq.com/keys
GROQ_API_KEY="gsk_your_key_here"
GROQ_ADMIN_KEY="gsk_your_admin_key_here"
GROQ_MARKETING_KEY="gsk_your_marketing_key_here"
GROQ_WHATSAPP_KEY="gsk_your_whatsapp_key_here"
GROQ_API_KEY_RESCUE="gsk_your_rescue_key_here"

# OpenAI API - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your_key_here"

# ============================================
# EMAIL - RESEND
# ============================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your_key_here"
RESEND_FROM_EMAIL="no-reply@yourdomain.com"

# ============================================
# DELIVERY - KWIK
# ============================================
KWIK_BASE_URL="https://staging-api-test.kwik.delivery/api/v2"
KWIK_EMAIL="your-email@example.com"
KWIK_PASSWORD="your-password"
KWIK_DOMAIN_NAME="staging-client-panel.kwik.delivery"

# ============================================
# FILE STORAGE
# ============================================
# MinIO / S3 Compatible Storage
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="your-access-key"
MINIO_SECRET_KEY="your-secret-key"
MINIO_BUCKET="vayva-uploads"
MINIO_USE_SSL="false"

# Vercel Blob (Alternative)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your_token_here"

# ============================================
# WHATSAPP - EVOLUTION API
# ============================================
EVOLUTION_API_URL="http://localhost:8080"
EVOLUTION_API_KEY="your-evolution-api-key"

# ============================================
# APPLICATION URLS
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_STOREFRONT_URL="http://localhost:3002"
NEXT_PUBLIC_OPS_URL="http://localhost:3001"
NEXT_PUBLIC_MARKETING_URL="http://localhost:3003"

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_FLAGS_ENABLED="true"
DEV_TOOLS_ENABLED="true"
OPS_P11_2_ENABLED="true"

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================
# SENTRY_DSN="your-sentry-dsn"
# NEXT_PUBLIC_ANALYTICS_ID="your-analytics-id"
