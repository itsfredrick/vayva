{
  "name": "vayva",
  "private": true,
  "packageManager": "pnpm@10.2.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:smoke": "node scripts/smoke.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "doctor": "node scripts/doctor.js",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "validate:ship": "pnpm doctor && pnpm lint && pnpm build && pnpm test:e2e",
    "check:security": "pnpm audit --audit-level=high",
    "check:runtime": "node scripts/check-runtime-boundaries.mjs",
    "check:bundle": "node scripts/check-bundle-size.mjs",
    "db:seed": "node infra/db/prisma/seed.ts",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "postinstall": "turbo run db:generate"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.58.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.7",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jscodeshift": "^17.3.0",
    "jsonwebtoken": "^9.0.3",
    "prettier": "^3.8.1",
    "prisma": "5.22.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20"
  },
  "prisma": {
    "schema": "infra/db/prisma/schema.prisma"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "zod": "^3.25.76"
  },
  "pnpm": {
    "overrides": {
      "ioredis": "5.9.1"
    }
  }
}