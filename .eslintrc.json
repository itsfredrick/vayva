{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "import",
        "jsx-a11y",
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-duplicate-imports": "error",
        "import/no-duplicates": "error",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-unused-expressions": "error",
        "@typescript-eslint/no-require-imports": "error",
        "@typescript-eslint/explicit-function-return-type": "off",
        "no-undef": "error",
        "no-mixed-spaces-and-tabs": "off",
        "no-extra-semi": "off",
        "no-empty": "error",
        "no-cond-assign": "error",
        "no-func-assign": "error",
        "no-useless-escape": "error",
        "no-constant-condition": "error",
        "prefer-const": "error",
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/*.tsx",
                "**/*.jsx"
            ],
            "extends": [
                "plugin:react/recommended",
                "plugin:react-hooks/recommended"
            ],
            "rules": {
                "react/react-in-jsx-scope": "off",
                "react/prop-types": "off",
                "react/no-unescaped-entities": "off",
                "react-hooks/exhaustive-deps": "off",
                "no-undef": "off",
                "no-restricted-syntax": [
                    "warn",
                    {
                        "selector": "JSXOpeningElement[name.name='button']",
                        "message": "Use the <Button> component from @vayva/ui instead of raw <button> unless absolutely necessary."
                    }
                ]
            }
        },
        {
            "files": [
                "**/*.test.ts",
                "**/*.test.tsx",
                "**/*.spec.ts",
                "**/*.spec.tsx",
                "**/tests/**"
            ],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/no-unused-vars": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "@typescript-eslint/no-unused-expressions": "off",
                "no-empty-pattern": "off",
                "no-console": "off",
                "no-undef": "off"
            }
        },
        {
            "files": [
                "**/*.config.js",
                "**/*.config.ts",
                "**/*.config.mjs",
                "**/scripts/**/*.js",
                "**/scripts/**/*.mjs",
                "**/scripts/**/*.ts",
                "scripts/**/*.js",
                "scripts/**/*.ts"
            ],
            "rules": {
                "@typescript-eslint/no-require-imports": "off",
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "@typescript-eslint/no-var-requires": "off",
                "no-console": "off",
                "no-undef": "off",
                "@typescript-eslint/no-unused-vars": "off"
            }
        },
        {
            "files": [
                "apps/storefront/src/**/*.ts",
                "apps/storefront/src/**/*.tsx",
                "apps/marketplace/src/**/*.ts",
                "apps/marketplace/src/**/*.tsx",
                "apps/worker/src/**/*.ts",
                "apps/ops-console/src/**/*.ts",
                "apps/ops-console/src/**/*.tsx",
                "apps/mobile/**/*.ts",
                "apps/mobile/**/*.tsx"
            ],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "no-console": "off",
                "@typescript-eslint/no-unused-vars": "off"
            }
        },
        {
            "files": [
                "apps/marketing/src/**/*.ts",
                "apps/marketing/src/**/*.tsx"
            ],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "no-console": "off",
                "@typescript-eslint/no-unused-vars": "off"
            }
        },
        {
            "files": [
                "**/app/api/**/route.ts"
            ],
            "rules": {
                "@typescript-eslint/explicit-function-return-type": "off",
                "@typescript-eslint/explicit-module-boundary-types": "off",
                "@typescript-eslint/no-explicit-any": "off"
            }
        },
        {
            "files": [
                "**/*.d.ts"
            ],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-function-return-type": "off"
            }
        },
        {
            "files": [
                "**/src/types/**/*.ts",
                "**/src/types/**/*.tsx"
            ],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "@typescript-eslint/no-unused-vars": [
                    "warn",
                    {
                        "argsIgnorePattern": "^_",
                        "varsIgnorePattern": "^_"
                    }
                ]
            }
        },
        {
            "files": [
                "apps/merchant-admin/src/**/*.ts",
                "apps/merchant-admin/src/**/*.tsx"
            ],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "react-hooks/set-state-in-effect": "off",
                "react-hooks/static-components": "off",
                "react-hooks/purity": "off",
                "react-hooks/immutability": "off",
                "@typescript-eslint/no-empty-object-type": "off",
                "react/display-name": "off",
                "react/no-unknown-property": [
                    "error",
                    {
                        "ignore": [
                            "jsx",
                            "global"
                        ]
                    }
                ],
                "no-case-declarations": "off",
                "no-useless-catch": "off",
                "@typescript-eslint/no-require-imports": "off",
                "@typescript-eslint/no-unsafe-declaration-merging": "off",
                "prefer-const": "off",
                "no-duplicate-imports": "off",
                "no-useless-escape": "off",
                "no-control-regex": "off",
                "no-var": "warn",
                "no-empty": "off",
                "@typescript-eslint/no-unused-vars": "off",
                "no-console": "off"
            }
        },
        {
            "files": [
                "services/notifications-service/src/**/*.ts"
            ],
            "rules": {
                "@typescript-eslint/no-unused-vars": "off",
                "no-console": "off"
            }
        },
        {
            "files": [
                "packages/**/*.ts",
                "packages/**/*.tsx",
                "infra/**/*.ts",
                "infra/**/*.tsx"
            ],
            "rules": {
                "@typescript-eslint/no-unused-vars": "off",
                "no-console": "off",
                "no-empty": "off"
            }
        },
        {
            "files": [
                "packages/shared/src/**/*.ts"
            ],
            "rules": {
                "no-restricted-imports": [
                    "error",
                    {
                        "paths": [
                            "next/server",
                            "next/navigation",
                            "next/headers",
                            "react",
                            "react-dom"
                        ],
                        "patterns": [
                            "next/*"
                        ]
                    }
                ]
            }
        }
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}