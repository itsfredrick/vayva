{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "import",
        "jsx-a11y"
    ],
    "rules": {
        "no-duplicate-imports": "error",
        "import/no-duplicates": "error",
        "no-restricted-syntax": [
            "warn",
            {
                "selector": "JSXOpeningElement[name.name='button']",
                "message": "Use the <Button> component from @vayva/ui instead of raw <button> unless absolutely necessary."
            }
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}